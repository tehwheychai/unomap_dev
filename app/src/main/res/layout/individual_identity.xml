<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner6_unomapcolor"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:id="@+id/identity_title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:id="@+id/individual_identity_cardtitle"
                android:layout_margin="10dp"
                android:textSize="30dp"/>
            <ImageView
                android:id="@+id/individual_identity_cardimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mykad"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />


        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/individual_identity_picture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/plus"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#FFffffff"
            app:civ_border_width="2dp"
            android:layout_below="@id/identity_title"/>
        <ListView
            android:id="@+id/individual_identity_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/individual_identity_picture"
            android:divider="@null"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner7_whitebg_curveedge"></ListView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:id="@+id/individual_identity_back"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

</RelativeLayout>