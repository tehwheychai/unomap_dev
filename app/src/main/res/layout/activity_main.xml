<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:id="@+id/container2"
    tools:context="com.example.wuikhong.unomap.MainActivityUnomap">






<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/activity_main_unomaplogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/identifyslogo" />
    <TextView
        android:id="@+id/activity_main_unomaplogoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@id/activity_main_unomaplogo"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

    <TextView

        android:id="@+id/sign_in_email_textview"
        android:text="@string/pin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/user_email"
        android:textSize="14sp"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@id/user_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/pin"
        android:textColorHint="#5fe1c2"
        android:textColor="#5fe1c2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:maxLength="6"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_email">
    <android.support.v7.widget.AppCompatButton
        android:text="@string/fingerprint"
        android:id="@+id/sign_in_page_button_fingerprint"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#5fe1c2"
        android:onClick="fingerprint"
        android:textSize="14sp"
        android:background="#414BA0"
        android:layout_margin="5dp"
        />

    <android.support.v7.widget.AppCompatButton
        android:text="@string/pin"
        android:id="@+id/sign_in_page_button_pin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#5fe1c2"
        android:onClick="pin"
        android:textSize="14sp"
        android:background="#414BA0"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />
    </LinearLayout>











    <Button
        android:id="@+id/sign_up_button"
        android:text="@string/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="call_sign_up_page"
        />

    <Button
        android:id="@+id/sign_in_button"
        android:text="@string/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />




</RelativeLayout>
