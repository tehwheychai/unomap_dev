<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/front_page"
        android:alpha="0.4"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/identifyslogo"
        android:layout_centerInParent="true"
        android:translationY="-50dp"
        android:id="@+id/landing_logo"/>
    <TextView
        android:id="@+id/landing_unomaplogoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:layout_below="@id/landing_logo"
        android:translationY="-45dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner4"
        android:text="@string/sign_up_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/landing_button_signup"
        android:onClick="call_sign_up_page"
        android:layout_below="@id/landing_unomaplogoname"
        />
    <Button
        android:layout_width="200dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner3"
        android:text="@string/sign_in_button"
        android:translationY="20dp"
        android:layout_below="@id/landing_button_signup"
        android:id="@+id/landing_button_signin"
        android:layout_centerHorizontal="true"
        android:onClick="signin"
         />

</RelativeLayout>